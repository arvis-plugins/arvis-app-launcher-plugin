{
    "$schema": "https://raw.githubusercontent.com/jopemachine/arvis-extension-validator/master/plugin-schema.json",
    "category": "Productivity",
    "creator": "jopemachine",
    "description": "App launcher plugin for Arvis",
    "defaultIcon": "icon.png",
    "name": "arvis-app-launcher-plugin",
    "readme": "https://github.com/jopemachine/arvis-app-launcher-plugin",
    "version": "0.1.1",
    "webAddress": "https://github.com/jopemachine/arvis-app-launcher-plugin",
    "enabled": true,
    "main": "index.js",
    "variables": {
        "applicationFolder": {
            "win32": "C:\\ProgramData\\Microsoft\\Windows\\Start Menu\\Programs",
            "darwin": "/Applications",
            "linux": "/usr/share/applications"
        },
        "deep": 3,
        "cachingComplete": false
    },
    "actions": [
        {
            "type": "cond",
            "modifiers": "normal",
            "if": {
                "cond": "{var:action} != 'cache'",
                "actions": {
                    "then": [
                        {
                            "modifiers": "normal",
                            "type": "script",
                            "script": "node open.js '{query}'"
                        }
                    ],
                    "else": [
                        {
                            "modifiers": "normal",
                            "type": "script",
                            "script": "node cacheIcon.js",
                            "actions": [
                                {
                                    "type": "notification",
                                    "modifiers": "normal",
                                    "title": "Caching complete!",
                                    "text": ""
                                }
                            ]
                        }
                    ]
                }
            }
        }
    ]
}